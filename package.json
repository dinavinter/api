{
  "name": "account-subscribtions-api",
  "version": "1.0.0",
  "dependencies": {
    "@redocly/openapi-cli": "^1.0.0-beta.69" 
  },
  "devDependencies": {
    "gh-pages" : "latest",
    "redoc-cli" : "latest"
  },
  "private": true,
  "scripts": {
    "start": "openapi preview-docs main",
    "workflow-build": "redoc-cli bundle openapi/workflow.yaml -t ./docs/index.html -o public/workflow.html",
    "channel-build": "redoc-cli bundle openapi/openapi.yaml -t ./docs/index.html -o public/index.html",
    "build": "npm run workflow-build && npm run channel-build",
    "test": "openapi lint",

    "deploy": "npm run build && gh-pages -d public -t true" 

  }
}
